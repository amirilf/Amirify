<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox onMouseClicked="#handleArtistClick" prefHeight="238.0" prefWidth="200.0" styleClass="vbox-item" stylesheets="@circle-item.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.gui.partials.CircleItemController">
   <children>
      <ImageView fx:id="cover" fitHeight="180.0" fitWidth="180.0" pickOnBounds="true">
         <clip>
            <Circle centerX="90" centerY="90" radius="90" />
         </clip>
         <image>
            <Image url="@../../media/cover2.png" />
         </image>
      </ImageView>
      <Label fx:id="lbl_name" alignment="CENTER" prefHeight="0.0" prefWidth="200.0" styleClass="item-title" text="test name example">
         <font>
            <Font name="Dyuthi Regular" size="20.0" />
         </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</VBox>
